[*]
charset = utf-8
end_of_line = crlf
indent_size = 4
indent_style = space
insert_final_newline = false
max_line_length = 120
tab_width = 4

# IntelliJ properties
ij_xml_space_inside_empty_tag = true

# ReSharper properties
resharper_place_attribute_on_same_line = false
resharper_space_before_self_closing = true
csharp_new_line_before_members_in_object_initializers = true

# ReSharper inspection severities
resharper_csharp_blank_lines_after_using_list = 1
resharper_blank_lines_after_using_list = 1
resharper_csharp_blank_lines_around_namespace = 1
resharper_blank_lines_around_namespace = 1
resharper_csharp_blank_lines_around_single_line_type = 0
resharper_blank_lines_around_single_line_type = 0
resharper_csharp_blank_lines_around_field = 0
resharper_blank_lines_around_field = 0
resharper_csharp_blank_lines_around_single_line_field = 0
resharper_blank_lines_around_single_line_field = 0

resharper_csharp_allow_comment_after_lbrace = false
resharper_allow_comment_after_lbrace = false
resharper_csharp_empty_block_style = together_same_line
resharper_empty_block_style = together_same_line
resharper_csharp_braces_for_for = required
resharper_braces_for_for = required
resharper_csharp_braces_for_while = required
resharper_braces_for_while = required
resharper_csharp_trailing_comma_in_multiline_lists = true
resharper_trailing_comma_in_multiline_lists = false
resharper_csharp_trailing_comma_in_singleline_lists = false
resharper_trailing_comma_in_singleline_lists = false
resharper_csharp_indent_nested_for_stmt = true
resharper_indent_nested_for_stmt = true
resharper_csharp_default_internal_modifier = implicit
resharper_default_internal_modifier = implicit
resharper_space_between_method_declaration_parameter_list_parentheses = false
resharper_csharp_space_before_singleline_accessorholder = true
resharper_space_before_singleline_accessorholder = true
resharper_csharp_space_in_singleline_accessorholder = true
resharper_space_in_singleline_accessorholder = true
resharper_csharp_space_within_single_line_array_initializer_braces = true
resharper_space_within_single_line_array_initializer_braces = true
resharper_csharp_invocable_declaration_braces = next_line
resharper_csharp_brace_style = next_line
resharper_csharp_braces_for_ifelse = required
resharper_braces_for_ifelse = required
resharper_csharp_braces_for_foreach = required
resharper_braces_for_foreach = required
resharper_invocable_declaration_braces = next_line
resharper_brace_style = next_line
resharper_csharp_wrap_property_pattern = chop_always
resharper_csharp_place_simple_initializer_on_single_line = false
resharper_place_simple_initializer_on_single_line = false
resharper_csharp_align_multiline_array_and_object_initializer = false
resharper_align_multiline_array_and_object_initializer = false
resharper_csharp_wrap_after_dot_in_method_calls = false
resharper_wrap_after_dot_in_method_calls = false
resharper_csharp_wrap_chained_method_calls = chop_if_long
resharper_wrap_chained_method_calls = chop_if_long
resharper_csharp_wrap_object_and_collection_initializer_style = chop_always
resharper_wrap_object_and_collection_initializer_style = chop_always
resharper_csharp_space_between_typecast_parentheses = false
resharper_space_between_typecast_parentheses = false
resharper_space_after_cast = false
resharper_convert_to_primary_constructor_highlighting = none 

[*.cs]
csharp_style_prefer_primary_constructors = false
# https://learn.microsoft.com/en-us/dotnet/fundamentals/code-analysis/style-rules/ide0290
dotnet_diagnostic.IDE0290.severity = none

# https://learn.microsoft.com/en-us/dotnet/fundamentals/code-analysis/style-rules/ide0005
dotnet_diagnostic.IDE0005.severity = error

# https://learn.microsoft.com/en-us/dotnet/csharp/language-reference/compiler-messages/cs1591
dotnet_diagnostic.CS1591.severity = none

# https://learn.microsoft.com/en-us/dotnet/fundamentals/code-analysis/quality-rules/ca2016
dotnet_diagnostic.CA2016.severity = error